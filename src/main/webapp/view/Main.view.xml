<mvc:View xmlns:mvc="sap.ui.core.mvc" 
xmlns:core="sap.ui.core"
xmlns:tnt="sap.tnt" 
xmlns="sap.m"
xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" 
controllerName="com.leavemodel.odata.controller.Main" displayBlock="true">
	<App id="app">
		<pages>
			<Page id="page" title="{i18n&gt;title}">
					<content>
							<GenericTile id="viewLeaveTileId" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="View Leave Request" press="action" subheader="My Leave Request" action:wiring="\{'press':\{'navigation':\{'routeName':'AllRequestDetail'\}\}\}">
								<TileContent>
									<ImageContent src="sap-icon://general-leave-request"/>
								</TileContent>
							</GenericTile>
							<GenericTile id="createLeaveTileId" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Create Leave Request" press="action" subheader="create new Leave Request" action:wiring="\{'press':\{'navigation':\{'routeName':'CreateLeaveRequest'\}\}\}">
								<TileContent>
									<ImageContent src="sap-icon://create-leave-request"/>
								</TileContent>
							</GenericTile>
					</content>
				</Page>
		</pages>
	</App>
</mvc:View>
